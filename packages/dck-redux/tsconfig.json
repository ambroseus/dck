{
  "compilerOptions": {
    "outDir": "./dist/",
    /* Basic Options */
    "target": "es5",
    "module": "es2015",
    "lib": ["es5", "es6", "dom"],
    "strict": true,
    "sourceMap": true,
    "noImplicitAny": true /* Enable all strict type-checking options. */,
    "declaration": true,
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": ["./src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
